<%= simple_form_for([@post, @post.comments.build]) do |f| %>

<div class="field">
  <div class="control">
    <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'commentLabel' }  %>
  </div>
</div>
<%= f.button :submit, 'Post', class: "button is-primary" %>
<% end %>
