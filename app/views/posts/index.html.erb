<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <p>
          <em><%= post.title %></em> <strong>
            -<%= link_to post.user, post.user %>
          </strong>
        </p>
        <p>
          <%= link_to image_tag(post.image.url), post %>
        </p>
        <p>
          <%= post.caption %>
        </p>
        <p>
          <%= link_to 'Show', post %><br >
          <%= link_to 'Edit', edit_post_path(post) %><br >
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

        </p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
